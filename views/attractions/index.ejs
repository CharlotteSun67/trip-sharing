<% layout('layouts/boilerplate') %>
    <div id="cluster-map"></div>
    <h1> All Attractions</h1>
    <!-- <div>
        <a href="/attractions/new">Add Attraction</a>
    </div> -->

    <% for (let attraction of attractions){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(attraction.images.length) {%>
                    <img crossorigin="anonymous" class="img-fluid" alt="" src="<%=attraction.images[0].url%>">
                    <% } else {%>
                        <img crossorigin="anonymous" class="img-fluid" alt="" src="">
                        <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= attraction.title %>
                        </h5>
                        <p class="card-text">
                            <%= attraction.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= attraction.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/attractions/<%= attraction.id %>">View <%= attraction.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>

        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
            const attractions = {features: <%- JSON.stringify(attractions) %>}
        </script>
        <script src="javascripts/clusterMap.js"></script>